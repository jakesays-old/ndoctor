<UserControl x:Class="Probel.NDoctor.Plugins.PrescriptionManager.View.AddDrugView"
             
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:text="clr-namespace:Probel.NDoctor.Plugins.PrescriptionManager.Translations"             
             xmlns:iw="clr-namespace:Probel.NDoctor.View.Core.Helpers;assembly=Probel.NDoctor.View.Core"
             xmlns:t="clr-namespace:Probel.NDoctor.View.Plugins.Helpers;assembly=Probel.NDoctor.View.Plugins"
             xmlns:h="clr-namespace:Probel.NDoctor.View.Core.Controls;assembly=Probel.NDoctor.View.Core"
             
             mc:Ignorable="d"
             Width="200">


    <StackPanel>
        <h:DrugBox  Drug="{Binding Drug}"
                    ButtonName="{Binding Source={x:Static Member=text:WorkbenchText.BtnAdd}}"
                    OkCommand="{Binding AddCommand}"/>
    </StackPanel>
</UserControl>
