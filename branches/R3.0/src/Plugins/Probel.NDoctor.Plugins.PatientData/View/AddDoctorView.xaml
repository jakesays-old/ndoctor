<UserControl x:Class="Probel.NDoctor.Plugins.PatientData.View.AddDoctorView"
             
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:text="clr-namespace:Probel.NDoctor.Plugins.PatientData.Translations"
             xmlns:vm="clr-namespace:Probel.NDoctor.Plugins.PatientData.ViewModel"
             xmlns:ctrl="clr-namespace:Probel.NDoctor.Plugins.PatientData.View"
             
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <StackPanel>
        <TextBlock>
            <Hyperlink Command="{Binding Path=OpenPopupCommand}">
                <TextBlock Text="{Binding Source={x:Static Member=text:AddDoctorText.TitleBindDoctor}}"/>
            </Hyperlink>
        </TextBlock>
        <Popup IsOpen="{Binding Path=IsPopupOpened}"
               StaysOpen="False"
               AllowsTransparency="True">
            <StackPanel Background="{x:Static SystemColors.InfoBrush}">
                <ctrl:DoctorView />
            </StackPanel>
        </Popup>
    </StackPanel>
</UserControl>
