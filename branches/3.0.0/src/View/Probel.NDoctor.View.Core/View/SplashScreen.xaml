<Window x:Class="Probel.NDoctor.View.Core.View.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Helpers="clr-namespace:Probel.NDoctor.View.Core.Helpers"
        xmlns:Converter="clr-namespace:Probel.NDoctor.View.Plugins.Converters;assembly=Probel.NDoctor.View.Plugins"
        Title="SpashScreen" Height="300" Width="300"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        ShowInTaskbar="False" BorderThickness="1" BorderBrush="#8B000000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="26"/>
        </Grid.RowDefinitions>
        <Image Source="/Images/Spash.jpg" VerticalAlignment="Top" />
        <TextBlock   Grid.Row="1" TextAlignment="Center" Text="{Binding Title}" FontWeight="Bold" FontSize="24" />
        <ProgressBar Grid.Row="2" Value="{Binding Progress}" />
        <TextBox     Grid.Row="3" TextAlignment="Center"  Text="{Binding Status}"/>
    </Grid>
</Window>
