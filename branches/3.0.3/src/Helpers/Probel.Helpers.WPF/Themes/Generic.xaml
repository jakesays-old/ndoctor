                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="#A5BFE1"
                            BorderThickness="0,0.5,0,0.5"
                            x:Name="bd"
                            Height="28">

                        <!--<Border CornerRadius="4,4,4,4" 
                                BorderThickness="1,1,1,1" 
