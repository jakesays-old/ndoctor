                                <local:CalendarTimeSlotItem Background="#E6EDF7" />
                                <local:CalendarTimeSlotItem Background="#E6EDF7" />
                                <local:CalendarTimeSlotItem Background="#E6EDF7" />
                                <local:CalendarTimeSlotItem Background="#E6EDF7" />
